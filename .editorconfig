# EditorConfig for Neovim Ultimate Edition
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{lua,vim}]
indent_style = space
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.{sh,bash}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
